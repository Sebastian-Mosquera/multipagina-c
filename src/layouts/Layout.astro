---
interface Props {
	title: string;
}

const { title = 'No name', msg='hola curis' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-orange-500 h-20">
		</header>
		
		<menu class="bg-blue-500 flex">
			<li >
				<a href="/" class=" hover:bg-white/25 px-2 block">Inicio</a>
			</li>
			<li >
				<a href="/quienes-somos" class=" hover:bg-white/25 px-2 block">Quienes somos</a>
			</li>
			<li >
				<a href="/contacto" class=" hover:bg-white/25 px-2 block">Contacto</a>
			</li>
			<li >
				<a href="/organigrama" class=" hover:bg-white/25 px-2 block">organigrama</a>
			</li>
		</menu>
		<p>Tu mensaje es: {msg}</p>
		<slot/>
		
		
	</body>
</html>

<style is:global>
@font-face {
  font-family: 'font';
  src: url('/fonts/RubikWetPaint-Regular.ttf') ;
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
</style>

